{
	"name": "Issues",
	"model": "FelixOnline\\Core\\ArchiveIssue",
	"baseRole": ["archivist"],
	"constraints": [
	],
	"fields": {
		"id": {
			"label": "ID",
			"readOnly": true,
			"required": true
		},
		"issue": {
			"label": "Issue Number",
			"readOnly": false,
			"required": true,
			"help": "You may have multiple issues with the same number if they are in different publications"
		},
		"publication": {
			"label": "Publication",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "name"
		},
		"date": {
			"label": "Date",
			"readOnly": false,
			"required": true
		},
		"inactive": {
			"label": "Inactive",
			"readOnly": false
		},
		"pdf": {
			"label": "Upload PDF",
			"readOnly": false,
			"required": true,
			"uploader": true
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		}
	],
	"actions": {
	},
	"modes": {
		"new": {
			"enabled": true,
			"callback": "archive_upload"
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"issue",
				"publication",
				"date",
				"inactive"
			],
			"canDelete": true
		},
		"details": {
			"enabled": true,
			"headerHint": "issue"
		},
		"search": {
			"enabled": true
		}
	},
	"auxHtml": "<p><center>You can upload new PDFs when creating a new entry here. To modify PDF data after uploading, use the Files tab</center></p>"
}