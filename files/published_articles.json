{
	"name": "Published Articles",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["superUser"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "0",
			"roles": []
		},
		{
			"specialConstraint": "isEditor",
			"reverse": false,
			"roles": ["sectionEditor"]
		},
		{
			"specialConstraint": "isAuthor",
			"reverse": false,
			"roles": ["author"]
		}
	],
	"actions": {
		"approve_unpublish": {
			"label": "Unpublish",
			"icon": "flash",
			"roles": ["superUser"]
		}
	},
	"hasId": true,
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			}
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true
		},
		"published": {
			"label": "Publication date",
			"readOnly": true,
			"required": true,
			"help": "This will be set when the article is published"
		},
		"approvedby": {
			"label": "Reviewed by",
			"readOnly": true,
			"required": true,
			"help": "This will be set when the article is published",
			"foreignKeyField": "name"
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": false
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": false,
			"foreignKeyField": "description",
			"required": true
		}
	},
	"order": [
		{
			"column": "published",
			"direction": "DESC"
		},
		{
			"column": "id",
			"direction": "ASC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"author",
				"published"
			],
			"canDelete": false
		},
		"search": {
			"enabled": true,
			"fields": ["title", "teaser", "category", "author", "img1", "text1", "published", "searchable", "comment_status"]
		},
		"details": {
			"enabled": true,
			"headerHint": "title"
		}
	},
	"auxHtml": ""
}