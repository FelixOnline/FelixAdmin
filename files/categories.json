{
	"name": "Categories",
	"model": "FelixOnline\\Core\\Category",
	"baseRole": ["superUser"],
	"constraints": [
		{
			"specialConstraint": "isEditor",
			"reverse": false,
			"roles": ["sectionEditor"]
		}
	],
	"fields": {
		"id": {
			"label": "Category",
			"readOnly": true,
			"required": true
		},
		"label": {
			"label": "Name",
			"readOnly": false,
			"required": true
		},
		"cat": {
			"label": "URL slug",
			"readOnly": false,
			"required": true
		},
		"active": {
			"label": "Enabled",
			"readOnly": false
		},
		"hidden": {
			"label": "Hidden",
			"readOnly": false,
			"help": "Categories can be active (articles in them can be viewed) but hidden from the navigation."
		},
		"email": {
			"label": "Email address",
			"readOnly": false,
			"validation": "email"
		},
		"twitter": {
			"label": "Twitter",
			"readOnly": false
		},
		"order": {
			"label": "Sort order",
			"readOnly": false
		},
		"parent": {
			"label": "Parent category",
			"readOnly": false,
			"foreignKeyField": "label"
		},
		"secret": {
			"label": "Secret",
			"readOnly": false,
			"help": "You must be logged in to see a secret category, or access any articles within one."
		},
		"editors": {
			"label": "Section editors",
			"multiMap": {
				"model": "FelixOnline\\Core\\CategoryAuthor",
				"this": "category",
				"foreignKey": "user",
				"foreignKeyField": "name"
			}
		}
	},
	"order": [
		{
			"column": "order",
			"direction": "ASC"
		}
	],
	"modes": {
		"new": {
			"enabled": true,
			"roles": ["abc"]
		},
		"search": {
			"enabled": true,
			"fields": ["active", "label", "email", "editors"]
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"label",
				"cat",
				"email",
				"editors",
				"active"
			],
			"canDelete": false
		},
		"details": {
			"enabled": true,
			"headerHint": "label"
		}
	},
	"auxHtml": ""
}