{
	"name": "Spam",
	"model": "FelixOnline\\Core\\Comment",
	"baseRole": ["commentEditor"],
	"constraints": [{
			"field": "active",
			"operator": "=",
			"test": 0,
			"roles": []
		},
		{
			"field": "spam",
			"operator": "=",
			"test": 1,
			"roles": []
		},
		{
			"field": "pending",
			"operator": "=",
			"test": 0,
			"roles": []
		}
	],
	"fields": {
		"id": {
			"label": "Comment",
			"readOnly": true,
			"required": true
		},
		"name": {
			"label": "Name",
			"readOnly": true,
			"required": true
		},
		"comment": {
			"label": "Comment",
			"readOnly": true,
			"required": true
		},
		"article": {
			"label": "Article",
			"readOnly": true,
			"required": true,
			"foreignKeyField": "title"
		},
		"timestamp": {
			"label": "Posted at",
			"readOnly": true,
			"required": true
		},
		"email": {
			"label": "Email",
			"readOnly": true,
			"required": true
		},
		"likes": {
			"label": "Likes",
			"readOnly": true,
			"required": true
		},
		"dislikes": {
			"label": "Dislikes",
			"readOnly": true,
			"required": true
		}
	},
	"actions": {
		"comment_approve": {
			"label": "Not spam, approve comment",
			"icon": "thumbs-up"
		},
		"comment_reject": {
			"label": "Not spam but reject comment",
			"icon": "thumbs-down"
		}
	},
	"order": [
		{
			"column": "timestamp",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"comment",
				"name",
				"article",
				"timestamp"
			],
			"canDelete": false
		},
		"details": {
			"enabled": true,
			"headerHint": "name",
			"readOnly": true
		},
		"search": {
			"enabled": true
		}
	},
	"auxHtml": "<p><center>These are periodically deleted from the database.</center></p>"
}