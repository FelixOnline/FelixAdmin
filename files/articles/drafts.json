{
	"name": "Draft Articles",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["author"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "1",
			"roles": []
		},
		{
			"specialConstraint": "isEditor",
			"reverse": false,
			"roles": ["sectionEditor"]
		},
		{
			"specialConstraint": "isAuthor",
			"reverse": false,
			"roles": ["author"],
			"notRoles": ["sectionEditor"]
		}
	],
	"actions": {
		"approve_section": {
			"label": "Submit for publication",
			"icon": "ok-circle"
		}
	},
	"hasId": true,
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"hidden": {
			"label": "Draft",
			"readOnly": false,
			"help": "Uncheck this box to submit the article for publication. It will then disappear from this screen."
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			},
			"help": "If you only have an author role, and you do not add yourself as an author to this article, you will be automatically added as one."
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		},
		{
			"column": "id",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"author"
			],
			"canDelete": false
		},
		"search": {
			"enabled": true,
			"fields": ["title", "teaser", "category", "author", "img1", "text1", "searchable", "comment_status"]
		},
		"details": {
			"enabled": true,
			"headerHint": "title"
		}
	},
	"auxHtml": ""
}