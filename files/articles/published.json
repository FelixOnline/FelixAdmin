{
	"name": "Published Articles",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["webMaster"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "reviewedby",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "0",
			"roles": []
		}
	],
	"actions": {
		"unpublish": {
			"label": "Unpublish",
			"icon": "flash",
			"roles": ["webMaster"]
		}
	},
	"hasId": true,
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			}
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"video_url": {
			"label": "Video",
			"readOnly": false,
			"required": false,
			"help": "If you would like a video to show on this article, paste the URL to the YouTube or Vimeo page here. Articles with videos will show the video instead of the picture when viewing the article, but will still show the picture on article lists."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": false
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": false,
			"foreignKeyField": "description",
			"required": true
		},
		"reviewedby": {
			"label": "Reviewed by",
			"readOnly": true,
			"required": true,
			"foreignKeyField": "name"
		},
		"published": {
			"label": "Publication date",
			"readOnly": true,
			"required": true,
			"help": "This will be set when the article is published"
		},
		"approvedby": {
			"label": "Published by",
			"readOnly": true,
			"required": true,
			"help": "This will be set when the article is published",
			"foreignKeyField": "name"
		},
		"is_live": {
			"label": "Live updates",
			"readOnly": false,
			"required": false,
			"help": "If checked, the article will be marked as having live updates. A live blog will be created if it does not already exist. If you uncheck this box at a later date, the live markers will be removed and the blog switched off, but the blog posts will remain and will still be shown."
		}
	},
	"order": [
		{
			"column": "published",
			"direction": "DESC"
		},
		{
			"column": "id",
			"direction": "ASC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"author",
				"published"
			],
			"canDelete": false
		},
		"search": {
			"enabled": true,
			"fields": ["title", "teaser", "category", "author", "img1", "text1", "published", "searchable", "comment_status", "blah"]
		},
		"details": {
			"enabled": true,
			"headerHint": "title",
			"callback": "liveblog_update"
		}
	},
	"auxHtml": ""
}