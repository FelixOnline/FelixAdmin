{
	"name": "Published in My Sections",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["sectionEditor"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "reviewedby",
			"operator": "IS NOT NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "0",
			"roles": []
		},
		{
			"specialConstraint": "isEditor",
			"reverse": false,
			"roles": ["sectionEditor"]
		}
	],
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			}
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"video_url": {
			"label": "Video",
			"readOnly": false,
			"required": false,
			"help": "If you would like a video to show on this article, paste the URL to the YouTube or Vimeo page here. Articles with videos will show the video instead of the picture when viewing the article, but will still show the picture on article lists."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": false
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": false,
			"foreignKeyField": "description",
			"required": true
		},
		"date": {
			"label": "Created at",
			"readOnly": true,
			"required": true
		},
		"reviewedby": {
			"label": "Reviewed by",
			"readOnly": true,
			"required": false,
			"foreignKeyField": "name"
		},
		"published": {
			"label": "Publication date",
			"readOnly": true,
			"required": false,
			"help": "This will be set when the article is published"
		},
		"approvedby": {
			"label": "Published by",
			"readOnly": true,
			"required": false,
			"help": "This will be set when the article is published",
			"foreignKeyField": "name"
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"date",
				"reviewedby",
				"published",
				"approvedby"
			],
			"canDelete": false
		},
		"details": {
			"enabled": true,
			"headerHint": "title",
			"readOnly": true
		},
		"search": {
			"enabled": true
		}
	},
	"auxHtml": "<p><center>To modify any articles, contact the web team.</center></p>"
}