{
	"name": "Articles Awaiting Review",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["sectionEditor"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "reviewedby",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "0",
			"roles": []
		},
		{
			"specialConstraint": "isEditor",
			"reverse": false,
			"roles": ["sectionEditor"]
		}
	],
	"actions": {
		"approve_reject": {
			"label": "Reject (author)",
			"icon": "remove-circle"
		},
		"approve_accept": {
			"label": "Accept for publication",
			"icon": "ok-circle"
		}
	},
	"hasId": true,
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			}
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": false,
			"readOnly": false
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": false
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": false,
			"foreignKeyField": "description",
			"required": true
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		},
		{
			"column": "id",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"author"
			],
			"canDelete": false
		},
		"search": {
			"enabled": true,
			"fields": ["title", "teaser", "category", "author", "img1", "text1", "searchable", "comment_status"]
		},
		"details": {
			"enabled": true,
			"headerHint": "title"
		}
	},
	"auxHtml": "<p><center>These are articles in your section(s) that are awaiting your review. You can edit them, submit them to the web team for publication, or send them back to the author for editing.</center></p>"
}