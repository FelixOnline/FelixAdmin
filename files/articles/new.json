{
	"name": "New Article",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["sectionEditor"],
	"constraints": [
	],
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			},
			"help": "If you only have an Author role, you will be automatically added as an author. If you do not specify any authors, you will be automatically added in all cases."
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"video_url": {
			"label": "Video",
			"readOnly": false,
			"required": false,
			"help": "If you would like a video to show on this article, paste the URL to the YouTube or Vimeo page here. Articles with videos will show the video instead of the picture when viewing the article, but will still show the picture on article lists."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true,
			"readOnly": false
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"date": {
			"label": "Created",
			"readOnly": true,
			"required": true,
			"autoField": true
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": true,
			"required": true,
			"autoField": true,
			"defaultValue": 1
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": true,
			"foreignKeyField": "description",
			"required": true,
			"autoField": true,
			"defaultValue": 1
		},
		"is_live": {
			"label": "Live updates",
			"readOnly": false,
			"required": false,
			"help": "If checked, the article will be marked as having live updates. A live blog will be created if it does not already exist. If you uncheck this box at a later date, the live markers will be removed and the blog switched off, but the blog posts will remain and will still be shown."
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": true,
			"callback": "create_article"
		},
		"list": {
			"enabled": false,
			"columns": [],
			"canDelete": false
		},
		"search": {
			"enabled": false,
			"fields": []
		},
		"details": {
			"enabled": false,
			"headerHint": "title"
		}
	},
	"auxHtml": "",
	"defaultTab": "new"
}