{
	"name": "New Article",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["author"],
	"constraints": [
	],
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": false,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": false,
			"required": true
		},
		"category": {
			"label": "Category",
			"readOnly": false,
			"required": true,
			"foreignKeyField": "label"
		},
		"author": {
			"label": "Authors",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			},
			"help": "If you leave this blank, it will be automatically set to you. If you do not add yourself as an author, you may not be able to edit the article after creation"
		},
		"img1": {
			"label": "Picture",
			"readOnly": false,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true
		},
		"img_caption": {
			"label": "Image caption",
			"readOnly": false,
			"required": false,
			"help": "This will only be shown if an image is supplied."
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true,
			"readOnly": false
		},
		"topics": {
			"label": "Topics",
			"readOnly": false,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"date": {
			"label": "Created",
			"readOnly": true,
			"required": true,
			"autoField": true
		},
		"searchable": {
			"label": "Shown to search engines",
			"readOnly": false,
			"defaultValue": 1
		},
		"comment_status": {
			"label": "Comment status",
			"readOnly": false,
			"foreignKeyField": "description",
			"required": true,
			"defaultValue": 1
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": true,
			"callback": "create_article"
		},
		"list": {
			"enabled": false,
			"columns": [],
			"canDelete": false
		},
		"search": {
			"enabled": false,
			"fields": []
		},
		"details": {
			"enabled": false,
			"headerHint": "title"
		}
	},
	"auxHtml": "",
	"defaultTab": "new"
}