{
	"name": "Publish Articles",
	"model": "FelixOnline\\Core\\Article",
	"baseRole": ["webMaster"],
	"constraints": [
		{
			"field": "published",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "approvedby",
			"operator": "IS NULL",
			"test": "",
			"roles": []
		},
		{
			"field": "hidden",
			"operator": "=",
			"test": "0",
			"roles": []
		}
	],
	"actions": {
		"approve_now": {
			"label": "Publish: immediately",
			"icon": "bullhorn"
		},
		"approve_tomorrow": {
			"label": "Publish: Next 7:00 AM",
			"icon": "time"
		},
		"approve_friday": {
			"label": "Publish: This Friday 7:00 AM",
			"icon": "fast-forward"
		},
		"approve_lastfriday": {
			"label": "Publish: Last Friday 7:00 AM",
			"icon": "fast-backward"
		}
	},
	"hasId": true,
	"fields": {
		"id": {
			"label": "Article",
			"readOnly": true,
			"required": true
		},
		"title": {
			"label": "Title",
			"readOnly": true,
			"required": true
		},
		"teaser": {
			"label": "Teaser",
			"readOnly": true,
			"required": true
		},
		"author": {
			"label": "Authors",
			"readOnly": true,
			"required": true,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleAuthor",
				"this": "article",
				"foreignKey": "author",
				"foreignKeyField": "name"
			}
		},
		"category": {
			"label": "Category",
			"readOnly": true,
			"required": true,
			"foreignKeyField": "label"
		},
		"img1": {
			"label": "Picture",
			"readOnly": true,
			"imageDetailsEditor": true,
			"canUpload": true,
			"canPick": true,
			"defaultImage": 4819
		},
		"text1": {
			"label": "Article text",
			"foreignKeyField": "content",
			"required": true,
			"readOnly": true
		},
		"topics": {
			"label": "Topics",
			"readOnly": true,
			"required": false,
			"multiMap": {
				"model": "FelixOnline\\Core\\ArticleTopic",
				"this": "article",
				"foreignKey": "topic",
				"foreignKeyField": "name"
			}
		},
		"published": {
			"label": "Publish date",
			"readOnly": false,
			"required": true
		},
		"approvedby": {
			"label": "Reviewed by",
			"readOnly": false,
			"required": true,
			"help": "It is reccomended you set this to yourself",
			"foreignKeyField": "name"
		}
	},
	"order": [
		{
			"column": "date",
			"direction": "DESC"
		}
	],
	"modes": {
		"new": {
			"enabled": false
		},
		"list": {
			"enabled": true,
			"columns": [
				"id",
				"title",
				"category",
				"author"
			],
			"canDelete": false
		},
		"search": {
			"enabled": true,
			"fields": ["title", "teaser", "category", "author", "img1", "text1"]
		},
		"details": {
			"enabled": true,
			"headerHint": "title"
		}
	},
	"auxHtml": "<p><center>If one of the default publication options is not suitable, click the edit icon and manually set a publication time.</center></p>"
}